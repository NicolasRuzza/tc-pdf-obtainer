{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2022",
    "sourceMap": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
  },
  "include": ["src/**/*"],
}